# GitHub Actions Runner Configuration
# Copy relevant variables to your .env.local file

# GitHub Personal Access Token (for automated runner registration)
# Create at: https://github.com/settings/tokens/new
# Required scope: 'repo'
# Use either GITHUB_TOKEN or GH_TOKEN
GITHUB_TOKEN=ghp_your_token_here
# GH_TOKEN=ghp_your_token_here

# Runner Configuration (Optional - defaults are shown)
GITHUB_RUNNER_NAME=my-runner
GITHUB_RUNNER_CONTAINER=gh-runner-${GITHUB_RUNNER_NAME}
GITHUB_RUNNER_WORKDIR=${HOME}/.github-runner
GITHUB_RUNNER_VERSION=latest
GITHUB_RUNNER_ARCH=arm64  # or x64 (auto-detected if not set)
GITHUB_RUNNER_LABELS=self-hosted,arm64,docker,nextjs,node,pnpm

# Repository Configuration (Optional - defaults to this repo)
#GITHUB_REPO_OWNER=user
#GITHUB_REPO_NAME=repo
#GITHUB_ORG_NAME=cloudservice-io
